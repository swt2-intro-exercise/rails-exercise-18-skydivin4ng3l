
<h1>Authors</h1>
 
<%= link_to 'New author', new_author_path %>

<table id= "authors_table">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Homepage</th>
    <th></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.first_name %></td>
      <td><%= author.last_name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show Details', author_path(author) %></td>
    </tr>
  <% end %>
</table>
